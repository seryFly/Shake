<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shakehideimg_man"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/mark"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/shake_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shake_logo_up" />

        <ImageView
            android:id="@+id/shake_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shake_logo_down" />
    </LinearLayout>

</FrameLayout>